<a href="/users/logout" class="btn btn-secondary float-right">Logout</a>
<h1 class="mt-4">Dashboard </h1>
<br><br>

<div class="container">
    <table class="table table-borderless">
        <thead>
            <tr>
                <th scope="col"> No. </th>
                <th scope="col">Room Type</th>
                <th scope="col">Room Number</th>
                <th scope="col">Nomber of persons</th>
                <th scope="col">Nomber of children</th>
                <th scope="col">From</th>
                <th scope="col">To</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>

                    <td>
                        <%=data[i].room_type %>
                    </td>
                    <td>
                        <%=data[i].room_number %>
                    </td>
                    <td>
                        <%=data[i].person_number %>
                    </td>
                    <td>
                        <%=data[i].child_number %>
                    </td>
                    <td>
                        <%=data[i].startDate %>
                    </td>
                    <td>
                        <%=data[i].endDate %>
                    </td>
                    <td>
                        <form action="/reservation/delete/<%= data[i]._id %>" method="POST">
                            <button type="submit" class="btn btn-primary"><i class="far fa-trash-alt"></i></button>
                        </form>
                    </td>
                    <td>
                        <form action="/reservation/edit/<%= data[i]._id %>" method="POST">
                            <button type="submit" class="btn btn-success"><i class="fas fa-edit"></i></button>
                        </form>
                    </td>
                </tr>
                <% } %>

        </tbody>
    </table>
</div>